    <body>
        <div class="box">
            <h1 class="text-center text-danger">Sign up</h1>
            <form action="/" method="post" enctype="multipart/form-data">
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label text-primary p-2">First name</label>
                    <div class="col-sm-10">
                        <input type="text" name="fname" class="form-control" placeholder="First name">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label p-2 text-primary">Last name</label>
                    <div class="col-sm-10">
                        <input type="text" name="lname" class="form-control" placeholder="Last name">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label p-2 text-primary">Email</label>
                    <div class="col-sm-10">
                        <input type="email" name="email" class="form-control" placeholder="Email">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label p-2 text-primary">Password</label>
                    <div class="col-sm-10">
                      <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="mb-2 text-primary">Upload resume</label>
                    <div class="col-sm-10">
                        <input type="file" name="file" class="form-control-file" id="exampleFormControlFile1">
                    </div>
                  </div>
                  <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                  
            </form>
        </div>
        
